# Environment configuration for A2A agents
# Copy this to .env and fill in your values

# LLM API Keys  
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Agent Discovery Registry
A2A_REGISTRY_URL=http://localhost:8000

# Agent URLs (for cross-agent communication)
MARKET_ANALYST_URL=http://localhost:8001
PLANNER_URL=http://localhost:8002
MAILER_URL=http://localhost:8003

# MCP Server URLs
ALPACA_MCP_URL=http://localhost:9001
GMAIL_MCP_SERVER_URL=http://localhost:9002
GMAIL_MCP_URL=http://localhost:9002

# Alpaca Trading API
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Gmail API
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_CREDENTIALS_PATH=./credentials/gmail_credentials.json
GMAIL_TOKEN_PATH=./credentials/gmail_token.json
DEFAULT_EMAIL_RECIPIENT=admin@stockripper.com
EMAIL_CC_RECIPIENTS=["alerts@stockripper.com"]

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Correlation tracking
X_CORRELATION_ID_HEADER=X-Correlation-ID

